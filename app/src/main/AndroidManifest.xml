<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hy.myapp">
    <!-- 用户权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ActivityStatusTestActivity" />
        <activity android:name=".activity.FragmentStatusActivity" />
        <activity android:name=".activity.PictureTestActivity" />
        <activity android:name=".activity.LoadingTestActivity" />
        <activity android:name=".activity.DialogTestActivity" />
        <activity android:name=".activity.MyDialogTestActivity" />
        <activity android:name=".activity.SnackBarTestActivity" />
        <activity android:name=".activity.BannerTestActivity" />
        <activity android:name="com.hy.baseapp.activity.IndexHomeActivity" />
        <activity android:name="com.hy.baseapp.activity.TabLayoutActivity" />
        <activity android:name=".activity.PaletteTestActivity" />
        <activity android:name=".activity.PaletteListTestActivity" />
        <activity android:name=".activity.RetrofitTestActivity" />
        <activity
            android:name=".activity.ActivityResultContractActivity"
            android:label="@string/activity_result_contract"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activity.ActivityResultContract2Activity"
            android:label="@string/activity_result_contract2"
            android:theme="@style/AppTheme2" />

        <activity
            android:name=".activity.KotlinRetrofitActivity"
            android:exported="true" />
    </application>

</manifest>